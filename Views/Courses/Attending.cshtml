@model BigShool_ThWeb.ViewModels.CoursesViewModel

@{
    ViewBag.Title = "Attending";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Attending</h2>
<div class="course" style="margin-top:20px;">
    @foreach (var course in Model.UpcommingCourses)
    {
        <div style="display:flex;">
            <div class="date">
                <div class="month">
                    @course.DateTime.ToString("MM")
                </div>
                <div class="day">
                    @course.DateTime.ToString("dd")
                </div>
            </div>
            <div class="details">
                <div class="lecturer">
                    @course.Lecturer.Name
                </div>
                @if (Model.ShowAction)
                {
                    <button class="btn btn-default btn-sm js-toggle-follow" data-user-id="@course.LecturerId">Follow</button>
                }
                <div class="category">
                    @course.category.Name
                </div>
                @*@if (Model.ShowAction)
                {
                    <button data-course-id="@course.Id" class="btn btn-sm js-toggle-attendance">Going ?</button>
                }*@
            </div>
        </div>
    }
</div>
@section scripts
{
    <script>
        $(document).ready(function () {
            $(".js-toggle-follow").click(function (e) {
                var button = $(e.target)

                $.ajax({
                    url: "/api/Followings",
                    method: "POST",
                    data: JSON.stringify({ FolloweeId: button.attr("data-user-id") }),
                    processData: false,
                    contentType: "application/json"
                }).done(function () {
                    button
                        .removeClass("btn-default")
                        .addClass("btn-info")
                        .text("Following");

                }).fail(function (err) {
                    console.log(err.responseText)
                    alert("Something failed!");
                });
            });
        });
    </script>


}

